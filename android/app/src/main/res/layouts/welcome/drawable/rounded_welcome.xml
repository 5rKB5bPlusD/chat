<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <!-- 填充颜色 -->
    <solid android:color="@color/welcome_text_background"/>
    <!-- 矩形的圆角半径 -->
    <corners android:radius="@dimen/welcome_text_background_radius"/>
    <!-- 内部边距 -->
    <padding android:bottom="@dimen/welcome_vertical_margin"
             android:top="@dimen/welcome_vertical_margin"
             android:right="@dimen/welcome_horizontal_margin"
             android:left="@dimen/welcome_horizontal_margin"/>
    <!-- 边框 -->
    <stroke android:width="@dimen/welcome_text_background_stroke"
            android:color="@color/welcome_text_stroke"/>
</shape>